/* pages/me/me.wxss */

page {
  background:rgb(247,247,247);
}
.meBg {
  display: flex;
  justify-content: start;
  align-items: center;
  background: linear-gradient(#FD8802, #FD9002,#FDA300,#FDA300);
  padding:70rpx 30rpx;
}

.usertx {
  width: 130rpx;
  position: relative;
  height: 130rpx;
}

.usertx image {
  width: 100%;
  height: 100%;
}

.level {
  width: 50rpx;
  height: 50rpx;
  border-radius: 100%;
  background: #fff;
  position: absolute;
  right: -20rpx;
  text-align: center;
  bottom:0;
  box-sizing: border-box;
}

.level image {
  width: 24rpx;
  height: 25rpx;
}

.level text {
  font-size: 24rpx;
  color: #ffa431;
}

.meName image{
  width: 40rpx;
  height: 40rpx;
}

.meName{
  margin-left: 40rpx;
  color:#fff;
  text-align: center
}

.meName text{
  font-size:36rpx;
  margin-bottom:10rpx;
  display: inline-block
}

.meJs{
  display: flex;
  justify-content: start;
  align-items: center;
  background:#fff;
  color:#ffa431;
  border-radius:30rpx;
  padding:6rpx 10rpx;
}

.meJs text{
  font-size:24rpx;
  margin-left: 10rpx;
  padding-bottom: 0;
  margin-bottom: 0
}

.meContent{
  display: table;
  width: 100%;
}

.meListOne{
  background:#fff;
  padding:0 35rpx;
}

.oneCont{
  border-bottom:1rpx solid #EAEAEA;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:30rpx 40rpx;
}

.oneCont image{
  width: 30rpx;
  height: 30rpx;
}

.meLogo{
  display: flex;
  align-items: center;
}

.meLogo image{
  width: 45rpx;
  height: 37rpx;
}

.meLogo text{
  font-size:34rpx;
  margin-left: 20rpx;
}

.meListTwo{
  background:#fff;
  padding:0 35rpx;
  margin-top:20rpx;
}

.meListOne view:last-child,.meListTwo view:last-child{
  border-bottom:none;
}