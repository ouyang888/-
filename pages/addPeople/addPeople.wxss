.code {
  height: 67rpx;
  font-size: 24rpx;
  border: 1px solid #ffebd1;
  color: #fbb75b;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btnView {
  width: 150rpx;
  white-space: nowrap;
}

.subMit {
  background: rgb(255, 165, 47);
  font-size: 32rpx;
}

radio .wx-radio-input{
   border-radius: 50%;
   width: 40rpx;
   height: 40rpx;
}

radio .wx-radio-input.wx-radio-input-checked{
   border: none;
   /* background: rgb(255, 165, 47); */
}

radio .wx-radio-input.wx-radio-input-checked::before{
   border-radius: 50%;
   width: 45rpx;
   height: 45rpx; 
   line-height: 45rpx;
   text-align: center;
   font-size:30rpx;
   color:#fff; 
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
   background: rgb(255, 165, 47);
}
.change{
  display: flex;
  justify-content: space-evenly;
  width:38%;
}
.change radio{
  color: rgb(102, 102, 102);
  margin-right: 100rpx;
}
.change radio:last-child{
  margin-right: 0;
}

