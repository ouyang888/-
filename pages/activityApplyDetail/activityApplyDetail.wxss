/* pages/activityApplyDetail/activityApplyDetail.wxss */
page {
  background:rgb(247,247,247);
}

.activhead{
  background: #fff;
}

.activImg{
  width: 100%;
  height: 400rpx;
}

.activImg image{
  width: 100%;
  height: 100%;
}

.activTxt{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.activTit{
  font-size:34rpx;
  padding: 30rpx 30rpx;
  line-height: 54rpx;
}

.activTxt {
  font-size:30rpx;
  color:#C3C3C3;
  padding: 10rpx 30rpx;
  padding-bottom: 30rpx;
}

.activTxt text{
  margin-right: 20rpx;
  font-size:26rpx;
}

.activJs{
  margin-top:20rpx;
  background:#fff;
  padding: 40rpx 30rpx;
}

.actJsTit{
  font-size:32rpx;
  margin-bottom:20rpx;
}

.activJs text{
  font-size:30rpx;
  color:#656565
}

.activMsg{
  background:#fff;
  margin-top:20rpx;
}

.activTitle{
  font-size:34rpx;
  padding:20rpx 30rpx;
  border-bottom:1px solid #E3E1DD;
}

.actMsgCont{
  padding:30rpx 30rpx;
  font-size:30rpx;
}

.actMsgCont text{
  display: table;
  margin-bottom:15rpx;
  color:#656565;
  font-size:28rpx;
}

.activBtn{
  margin-top:50rpx;
}

.activBtn button{
  background:#FEA432;
  color:#fff;
  border:none;
  border-radius: 0;
}