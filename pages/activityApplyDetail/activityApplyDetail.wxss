/* pages/activityApplyDetail/activityApplyDetail.wxss */
page {
  background:rgb(247,247,247);
}

.activhead{
  background: #fff;
}

.activImg{
  width: 100%;
  height: 380rpx;
}

.activImg image{
  width: 100%;
  height: 100%;
}

.activTxt{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.activTit{
  font-size:34rpx;
  padding: 30rpx 30rpx;
  line-height: 54rpx;
}

.activTxt {
  font-size:30rpx;
  color:#C3C3C3;
  padding: 10rpx 30rpx;
  padding-bottom: 30rpx;
}

.activTxt text{
  margin-right: 20rpx;
  font-size:26rpx;
}

.activJs{
  margin-top:20rpx;
  background:#fff;
  padding: 40rpx 30rpx;
}

.actJsTit{
  font-size:32rpx;
  margin-bottom:20rpx;
}

.activJs text{
  font-size:30rpx;
  color:#656565
}

.activMsg{
  background:#fff;
  margin-top:20rpx;
}

.activTitle{
  font-size:34rpx;
  padding:20rpx 30rpx;
  border-bottom:1px solid #E3E1DD;
}

.actMsgCont{
  padding:30rpx 30rpx;
  font-size:30rpx;
}

.actMsgCont text{
  display: table;
  margin-bottom:15rpx;
  color:#656565;
  font-size:28rpx;
  line-height:45rpx;
}

.activBtn{
  margin-top:50rpx;
}

.activBtn button{
  background:#FEA432;
  color:#fff;
  border:none;
  border-radius: 0;
}
/* 弹框 */
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 90%;
  overflow: hidden;
  position: fixed;
  top: 27%;
  left: 5%;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 10rpx;
  height:auto;

}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}




input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  font-size: 34rpx;
  line-height: 86rpx;
  padding-bottom: 58rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 90%;
  color: #fff;
  text-align: center;
  background: rgb(204, 204, 204);
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: 54rpx;
}
.inputBox {
  width: 90%;
  margin: 0 auto;
  margin-top: 60rpx;
}

.inputBox ul li {
  font-size: 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f3f3f3;
  padding: 20rpx 10rpx;
  justify-content: start;
}

.inputBox ul li text {
  width: 145rpx;
  font-size: 28rpx;
}

.inputBox ul li input {
  font-size: 28rpx;
}
.code {
  height: 67rpx;
  font-size: 24rpx;
  border: 1px solid #ffebd1;
  color: #fbb75b;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btnView {
  width: 150rpx;
  white-space: nowrap;
}
.codeInputs{
  margin-left: 10rpx;
}