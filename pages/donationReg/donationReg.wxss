/* pages/donationReg/donationReg.wxss */

page {
     background: rgb(247, 247, 247);
}

.donatMony {
     background: #fff;
     display: flex;
     justify-content: space-between;
     align-items: center;
     text-align: center;
     padding: 40rpx 30rpx;
     border-top:1px solid rgb(240, 240, 240);
}

.donatCont {
     border-right: 1px solid rgb(240, 240, 240);
     font-size: 34rpx;
     color: rgb(219, 44, 44);
     width: 33.3%;
}

.donatCont text {
     font-size: 22rpx;
     margin-top: 30rpx;
     color: rgb(87, 87, 87);
}

.donatCont:last-child {
     border-right: none;
}

.donatPeople {
     margin-top: 20rpx;
     background: #fff;
}

.organSearch {
     display: flex;
     justify-content: space-between;
     align-items: center;
     background: #fff;
     padding: 30rpx 40rpx;
}

.searBtn {
     font-size: 30rpx;
     color: #8d8d8d;
}

.organImg image {
     width: 80rpx;
     height: 80rpx;
     margin-right: 40rpx;
}

.organSea image {
     width: 30rpx;
     height: 30rpx;
     margin-right: 30rpx;
}

.organSea {
     display: flex;
     justify-content: start;
     align-items: center;
     border: 1px solid #e7e7e7;
     padding: 10rpx 20rpx;
     border-radius: 100rpx;
     width: 75%;
}

.organSea .section input {
     font-size: 30rpx;
}

.donatTit {
     display: flex;
     justify-content: space-between;
     align-items: center;
     font-size:32rpx;
     border-top:1px solid #e7e7e7;
     border-bottom:1px solid #e7e7e7;
     padding:32rpx 30rpx;
     color: rgb(87, 87, 87);
}

.donatAdd image{
     width: 40rpx;
     height: 40rpx;
     margin-right: 20rpx;
}

.donatAdd{
     font-size:30rpx;
     display: flex;
     align-items: center;
}

.donatAdd text{
  font-size:30rpx;
}

.donatPeoList{
     padding:0 30rpx;
}

.donatManCont{
     display: flex;
     justify-content: space-between;
     align-items: center;
     padding:40rpx 0rpx;
     border-bottom: 1px solid #e7e7e7
}

.manMsg image{
     width: 70rpx;
     height:70rpx;
     margin-right: 30rpx;
}

.manMsg{
     font-size:30rpx;
     display: flex;
     align-items: center
}

.manMsg text{
     font-size:20rpx;
     margin-top:20rpx;
     display: table;
     color:#bbbbbb
}

.manEdit{
     display: flex;
     align-items: flex-end;
     justify-content: right
}

.manEdit button{
     border-radius: 40rpx;
     font-size:22rpx;
     border:1px solid #afafaf;
     margin:0 15rpx;
     /* border:none; */
     background:#fff;
     width: 130rpx;
}

.manEdit button:last-child{
     background:#ffa431;
     border:none;
}




/* 弹框 */
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 90%;
  overflow: hidden;
  position: fixed;
  top: 27%;
  left: 5%;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 10rpx;
  height:auto;

}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}




input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  font-size: 34rpx;
  line-height: 86rpx;
  padding-bottom: 58rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 90%;
  color: #fff;
  text-align: center;
  background: rgb(204, 204, 204);
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: 54rpx;
}
.inputBox {
  width: 90%;
  margin: 0 auto;
  margin-top: 60rpx;
}

.inputBox ul li {
  font-size: 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f3f3f3;
  padding: 20rpx 10rpx;
  justify-content: start;
}

.inputBox ul li text {
  width: 145rpx;
  font-size: 28rpx;
}

.inputBox ul li input {
  font-size: 28rpx;
}
.code {
  height: 67rpx;
  font-size: 24rpx;
  border: 1px solid #ffebd1;
  color: #fbb75b;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btnView {
  width: 150rpx;
  white-space: nowrap;
}
.codeInputs{
  margin-left: 10rpx;
}


.showNothing{
  font-size: 15px;
  color: #8D8D8D;
  text-align: center;
  margin-top: 20px;
}